	</bean>
-->
	<bean id="services.byCategory" class="services.ByCategoryService">
		<property name="repository" ref="persistence.byCategoryRepository" />
	</bean>

	<bean id="services.byCombination" class="services.ByCombinationService">
		<property name="repository" ref="persistence.byCombinationRepository" />
	</bean>

	<bean id="services.byProduct" class="services.ByProductService">
		<property name="repository" ref="persistence.byProductRepository" />
