	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:tx="http://www.springframework.org/schema/tx"
	xsi:schemaLocation="
       http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.0.xsd 
       http://www.springframework.org/schema/tx http://www.springframework.org/schema/tx/spring-tx-4.0.xsd">

	<!-- beans de spring -->
	<bean id="services.general" class="services.GeneralService">
		<property name="productService" ref="services.product" />
		<!--
		<property name="marketingManagerService" ref="services.marketingManager" />
		<property name="amdinService" ref="services.admin" /> -->
		<property name="byCategoryService" ref="services.byCategory" />
		<property name="byCombinationService" ref="services.byCombination" />
		<property name="byProductService" ref="services.byProduct" />
		
		<property name="offerService" ref="services.offer" />
	</bean>

	<bean id="services.product" class="services.ProductService">
		<property name="repository" ref="persistence.productRepository" />
	</bean>
