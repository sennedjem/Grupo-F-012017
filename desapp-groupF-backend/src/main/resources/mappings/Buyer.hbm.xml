<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
                                   "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping default-access="field"
	default-cascade="save-update">
	<class name="model.Buyer">
		<id column="ID" name="userName">
			<generator class="native" />
		</id>
		<bag name="purchaseHistory" cascade="all" inverse="false">
			<key column="id"/>
			<one-to-many class="model.ProductList"/>
		</bag>
		<!-- 
		<one-to-one name="profile" class="model.Profile"/>
		<one-to-one name="currentPurchase" class="model.Purchase"/>
		 -->
	</class>
</hibernate-mapping>